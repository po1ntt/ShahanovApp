<Page x:Class="ShahanovApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShahanovApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel MinWidth="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="DemiBold" FontSize="20">Логин:</TextBlock>
            <TextBox Height="40" FontWeight="DemiBold" FontSize="18" x:Name="LoginTxb" Margin="0,0,0,5"></TextBox>
            <TextBlock FontWeight="DemiBold" FontSize="20">Пароль:</TextBlock>
            <PasswordBox Height="40" FontWeight="DemiBold" FontSize="18" x:Name="PasswordTxb" Margin="0,0,0,5"></PasswordBox>
            <Button Content="Войти в аккаунт"  Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
